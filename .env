# Server Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
SESSION_SECRET=your_session_secret_key

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/sarahs_shortcakes
MONGODB_TEST_URI=mongodb://localhost:27017/sarahs_shortcakes_test

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=8h
COOKIE_EXPIRE=7

# Email Service (SMTP)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM="Sarah's Short Cakes <noreply@example.com>"
EMAIL_STAFF=staff@example.com

# Bakery Configuration
BAKERY_NAME="Sarah's Short Cakes"
BAKERY_ADDRESS="123 Bakery Street, Caldwell, TX 77836"
BAKERY_PHONE="(555) 123-4567"
BAKERY_HOURS="Monday-Friday: 8am-6pm, Saturday: 9am-4pm"

# Pricing Configuration
BASE_CUPCAKE_PRICE=4.00
DECORATION_FEE=1.00
DELIVERY_FEE=5.00

# Admin Default Account (for initial setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Sarah
DEFAULT_ADMIN_EMAIL=sarah@example.com

PAYMENT_SIMULATION_MODE=true

# Development Flags
DEBUG=true
SEED_DATABASE=true